{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },
    "checkJs": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2021",
      "DOM"
    ],
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "coverage"
  ]
}
